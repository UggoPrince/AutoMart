{
  "name": "automart",
  "version": "1.0.0",
  "description": "AutoMart is an online app that enables you to sell and/or buy cars.",
  "main": "app.js",
  "scripts": {
    
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build/server ./server -s",
    "build-app": "babel -d ./build app.js -s",
    "build": "npm run clean && npm run build-server && npm run build-app",
    "start:dev": "nodemon --exec babel-node app.js",
    "test": "nyc mocha --require @babel/register --exit --recursive --timeout 40000",
    "coverage": "nyc report --reporter=lcov --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UggoPrince/AutoMart.git"
  },
  "author": "uggoprince",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cloudinary": "^1.14.0",
    "connect-multiparty": "^2.2.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "morgan": "^1.9.1",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-regenerator": "^7.4.5",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1"
  }
}
